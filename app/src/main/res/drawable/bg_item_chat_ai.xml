<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer 1: Border gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#EE894C"
                android:endColor="#E3354B"
                android:type="linear" />
            <corners android:topLeftRadius="24dp"
                android:topRightRadius="24dp"
                android:bottomLeftRadius="24dp" />
        </shape>
    </item>

    <!-- Layer 2: Inner background (inset) -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="-90"
                android:startColor="#FC9D65"
                android:endColor="#FF7E7A"
                android:type="linear" />
            <corners android:topLeftRadius="24dp"
                android:topRightRadius="24dp"
                android:bottomLeftRadius="24dp"/>
        </shape>
    </item>
</layer-list>